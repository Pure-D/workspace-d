{
	"name": "workspace-d",
	"description": "Provides functions for IDEs for managing DCD, Dscanner and Dfmt. Usable as application and library",
	"license": "MIT",
	"copyright": "Copyright Â© 2017-2021, webfreak",
	"authors": [
		"webfreak"
	],
	"dependencies": {
		"workspace-d:dcd": "*",
		"dub": "1.24.0",
		"painlessjson": "1.4.0",
		"standardpaths": "0.8.1",
		"dfmt": "0.13.4",
		"dscanner": "0.11.1",
		"inifiled": "1.3.3",
		"libdparse": "0.17.0",
		"emsi_containers": "0.8.0"
	},
	"subPackages": [
		"./installer",
		"./dcd",
		"./dml"
	],
	"configurations": [
		{
			"name": "executable",
			"targetType": "executable",
			"mainSourceFile": "source/app.d"
		},
		{
			"name": "library",
			"targetType": "library",
			"excludedSourceFiles": [
				"source/app.d"
			]
		},
		{
			"name": "unittest",
			"mainSourceFile": "source/app.d",
			"dflags": ["-checkaction=context"],
			"dependencies": {
				"silly": "~>1.1.1"
			}
		}
	]
}
