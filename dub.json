{
	"name": "workspace-d",
	"description": "Provides functions for IDEs for managing DCD, Dscanner and Dfmt. Usable as application and library",
	"license": "MIT",
	"copyright": "Copyright Â© 2017-2019, webfreak",
	"authors": [
		"webfreak"
	],
	"dependencies": {
		"workspace-d:dcd": "*",
		"dub": "1.22.0",
		"painlessjson": "1.4.0",
		"standardpaths": "0.8.1",
		"dfmt": "0.13.0",
		"dscanner": "0.10.0",
		"inifiled": "1.3.1",
		"libdparse": "0.15.3",
		"emsi_containers": "0.8.0-alpha.19"
	},
	"subPackages": [
		"./installer",
		"./dcd",
		"./dml"
	],
	"configurations": [
		{
			"name": "executable",
			"targetType": "executable"
		},
		{
			"name": "library",
			"targetType": "library",
			"excludedSourceFiles": [
				"source/app.d"
			]
		},
		{
			"name": "unittest",
			"targetType": "executable",
			"preBuildCommands-notwindows": [
				"$DUB run --compiler=%DC% unit-threaded -c gen_ut_main -- -f bin\\ut.d"
			],
			"preBuildCommands-notposix": [
				"$DUB run --compiler=$$DC unit-threaded -c gen_ut_main -- -f bin/ut.d"
			],
			"mainSourceFile": "bin/ut.d",
			"excludedSourceFiles": [
				"source/app.d",
				"source/workspaced/info.d"
			],
			"buildRequirements": ["allowWarnings"],
			"dependencies": {
				"unit-threaded": "*"
			}
		}
	]
}